{
  "name": "waika_project",
  "private": true,
  "scripts": {
    "bootstrap": "yarn && lerna clean --yes && yarn && npm run docker-build",
    "build": "lerna run build",
    "dev": "npm run dev:client",
    "dev:client": "lerna run dev --scope=@waika_project/client",
    "dev:server": "lerna run dev --scope=@waika_project/server",
    "docker-build": "docker build -f ./docker/Dockerfile.builder -t waika_project_image --compress .",
    "docker-rebuild": "docker build --no-cache -f ./docker/Dockerfile.builder -t waika_project_image --compress .",
    "docker-down": "export NODE_VERSION=$(cat .nvmrc) && docker-compose --env-file .env -f ./docker/docker-compose.yml down",
    "docker-up": "set NODE_VERSION=$(cat .nvmrc) && docker-compose --env-file .env -f ./docker/docker-compose.yml up --build",
    "docker-adminer-up": "docker-compose -f ./docker/docker-compose.adminer.yml up --build",
    "docker-adminer-down": "docker-compose -f ./docker/docker-compose.adminer.yml down",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "preview": "lerna run preview",
    "stylelint": "lerna run stylelint",
    "stylelint:fix": "lerna run stylelint:fix",
    "test": "lerna run test --stream",
    "typecheck": "lerna run typecheck --stream"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "20.12.2"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.7.15",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "lerna": "^6.6.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "license": "MIT"
}
