{
  "extends": "../../tsconfigs/tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["**/*.js", "**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["dist"]
}
